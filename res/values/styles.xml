<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="app_theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="default_button">
        <item name="android:textColor">@color/default_button_white</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:background">@drawable/ui_titlebar_bg_selector</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="default_text">
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textColor">@color/default_text_white</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="casedetail_text">
        <item name="android:textSize">@dimen/casedetails_size</item>
        <item name="android:textColor">@color/casedetail_black</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
    </style>

    <style name="login_text">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="casedetails_bottom_text">
        <item name="android:textSize">@dimen/casedetails_bottom_text_size</item>
        <item name="android:textColor">@color/casedetail_bottom_text_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="default_edittext">
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:background">@drawable/default_edittext_shape</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    
    <style name="default_edittext_no_shape">
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:background">@drawable/default_edittext_no_shape</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="ui_titlebar_text">
        <item name="android:textSize">@dimen/ui_titlebar_textSize</item>
        <item name="android:textColor">@color/ui_titlebar_textColor</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_marginLeft">15dip</item>
    </style>

    <style name="ui_titlebar_centenText">
        <item name="android:textSize">@dimen/ui_titlebar_centerTxt_textSize</item>
        <item name="android:textColor">@color/ui_titlebar_textColor</item>
        <item name="android:layout_margin">3dip</item>
    </style>

    <style name="list_text">
        <item name="android:textSize">@dimen/list_size</item>
        <item name="android:textColor">@color/list_color</item>
        <item name="android:layout_margin">2dip</item>
    </style>

    <style name="listView">
        <item name="android:cacheColorHint">@color/list_black</item>
        <item name="android:divider">@color/list_black</item>
        <!-- <item name="android:background">@color/list_black</item> -->
        <item name="android:dividerHeight">0dip</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:fadeEnabled">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@color/list_black</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="casemanage_button">
        <item name="android:textColor">@color/casemanage_button_white</item>
        <item name="android:textSize">@dimen/casemanage_button_size</item>
        <item name="android:background">@drawable/casemanage_button_selector</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dip</item>
    </style>
    <style name="casemanage_button_orange">
        <item name="android:textColor">@color/casemanage_button_white</item>
        <item name="android:textSize">@dimen/casemanage_button_size</item>
        <item name="android:background">@drawable/casemanage_button_selector_orange</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

    <style name="createcase_edittext">
        <item name="android:textSize">@dimen/createcase_edit_size</item>
        <item name="android:background">@drawable/default_edittext_bow_shape</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">77dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

   <style name="createcase_edittext_no_sharp">
        <item name="android:textSize">@dimen/createcase_edit_size</item>
        <item name="android:background">@drawable/default_edittext_no_shape</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">77dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    
    <style name="createcase_text">
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="report_text">
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="repairrecommend_text">
        <item name="android:textSize">@dimen/repairrecommend_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dip</item>
    </style>

    <!-- camera -->
    <style name="camera_photopreview" mce_bogus="1" parent="android:Animation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterAnimation">@anim/activity_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/activity_slide_out_to_bottom</item>
    </style>

    
    
    <style name="settingip_edittext">
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:background">@drawable/default_edittext_shape</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">65dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="cry_logo_text">
        <item name="android:textSize">@dimen/cry_logo_textsize</item>
        <item name="android:textColor">@color/cry_logo_text</item>
        <item name="android:paddingTop">5dip</item>
    </style>
    
    <style name="systemsetting_button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:background">@drawable/systemsetting_button_bg_selector</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    
    <style name="repairrecommend_top_arc_button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:background">@drawable/repairrecommend_button_top_acr_bg_selector</item>
    </style>
    
    
    <style name="repairgarages_button">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">@dimen/casemanage_button_size</item>
        <item name="android:background">@drawable/repairgarages_button_selector</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dip</item>
    </style>
    
</resources>