<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_casedetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg" >

    <com.whhcxw.ui.Titlebar2
       xmlns:custom="http://schemas.android.com/apk/res/com.whhcxw.MobileCheck"
        android:id="@+id/titlebar"
        custom:titlebarBackground="?attr/titlebar_backgroud"
        custom:titlebarLeftBackground="?attr/titlebar_left_backgroud"
        custom:titlebarRightBackground="?attr/titlebar_right_backgroud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/casemes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar" >

        <LinearLayout
            android:id="@+id/casedetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dip"
            android:background="@drawable/casedetails_bg"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:paddingTop="13dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/car_text"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/car" />

                        <TextView
                            android:id="@+id/car"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           />
                    </LinearLayout>

                    <!--
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/survey_text"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/survey" />

                        <TextView
                            android:id="@+id/survey"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999888" />
                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/carmaster_text"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/carmaster" />

                        <TextView
                            android:id="@+id/carmaster"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="240dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/casenumber_text"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/casenumber" />

                        <TextView
                            android:id="@+id/casenumber"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <!--
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/verify_text"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/verify" />

                        <TextView
                            android:id="@+id/verify"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="549527" />
                    </LinearLayout>
                    -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/phone_text"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone" />

                        <TextView
                            android:id="@+id/phone"
                            style="@style/casedetail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time_text"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repair_time" />

                <TextView
                    android:id="@+id/time"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/address_text"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address" />

                <TextView
                    android:id="@+id/address"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/memo_text"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/memo" />

                <TextView
                    android:id="@+id/memo"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>
            
            
            <LinearLayout
                android:id="@+id/reply_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/reply_text"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reply" />

                <TextView
                    android:id="@+id/reply"
                    style="@style/casedetail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:paddingTop="8dip"
            android:scaleType="centerInside"
            android:src="@drawable/case_details_loop" />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/casedetails"
            android:background="@color/case_line"/>
    </RelativeLayout>
    <!-- 中间隔栏 -->

    <RelativeLayout
        android:id="@+id/center_bar"
        android:layout_width="fill_parent"
        android:layout_height="34dip"
        android:layout_below="@id/casemes"
        android:background="?attr/titlebar_backgroud"
        android:gravity="center_vertical" >

        <TextView
            style="@style/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/casedetails_picture"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edittext_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ui_title_bg"
        android:visibility="gone">

        <EditText
            android:id="@+id/edittext"
            style="@style/report_text"
            android:textSize="@dimen/button_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/largerdangercasedetails_edittext_shape"
            android:gravity="left|top"
            android:lines="2" />

        <Button
            android:id="@+id/button"
            style="?attr/large_button"
            android:textSize="@dimen/button_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="@string/casedetails_send" />
    </RelativeLayout>

    
    <GridView
        android:id="@+id/gridview"
        style="@style/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/center_bar"
        android:layout_above="@id/edittext_layout"
        android:fadeScrollbars="true"
        android:gravity="center_horizontal"
        android:numColumns="3" >
    </GridView> 
    
    
</RelativeLayout>