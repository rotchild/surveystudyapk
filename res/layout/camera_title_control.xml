<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_control_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:gravity="center_vertical|center_horizontal"
    android:layout_gravity="left"
    android:orientation="vertical" >

    <com.whhcxw.camera.ui.RotateImageView
        android:id="@+id/camera_b2f_switch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/camera_btn_title_bg"
        android:src="@drawable/camera_ic_top_switcher" />

    <com.whhcxw.camera.ui.RotateImageView
        android:id="@+id/camera_focus_switch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/camera_btn_title_bg"
        android:src="@drawable/camera_button_focus_auto" />


    <com.whhcxw.camera.ui.RotateImageView
        android:id="@+id/camera_flash_switch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/camera_btn_title_bg"
        android:src="@drawable/camera_ic_flash_off" />

</RelativeLayout>