<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/current_listview_item_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:padding="5dip"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/car_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="8dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/car"
            style="@style/list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dip"
            android:text="赣A76220"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/newmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:background="@drawable/main_new_casemess"
            android:paddingRight="5dip"
            android:scaleType="fitXY" />
    </LinearLayout>

    
     <TextView
        android:id="@+id/report"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	 android:layout_toRightOf="@id/image"
        android:text="RDAT201342010000180000-标的" />
 
    <TextView
        android:id="@+id/time"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/report"
        android:layout_marginTop="5dip"
        android:text="03-11 08:12" />

    <TextView
        android:id="@+id/address"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/image"
        android:paddingBottom="5dip"
        android:text="江西" />

    <!--
         <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="12dip"
        android:layout_below="@id/address"
        android:layout_toRightOf="@id/image"
        android:padding="5dip"
        android:visibility="gone" />    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/list_back_line" />

    <ImageView
        android:id="@+id/taskType"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/address"
        android:padding="5dip"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/number"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_toLeftOf="@+id/address"
        android:gravity="right|top"
        android:scaleType="fitXY"
        android:textSize="@dimen/default_size" />

    <com.whhcxw.ui.PictureProgressBar
        android:id="@+id/pictureProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="5dip"
        android:indeterminateDrawable="@drawable/progress_small" />

      
    
    
</RelativeLayout>