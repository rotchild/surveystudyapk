<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/current_listview_item_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:padding="5dip"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/taskType"
        android:layout_width="80dip"
        android:layout_height="80dip"
		android:padding="5dip"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/car"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:gravity="center_vertical"
        android:paddingTop="10dip"
        android:text="赣A76220"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dip"
        android:src="@drawable/checkbox_btn_off" />

    <TextView
        android:id="@+id/report"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imageview"
        android:text="00-1303411100" />

    <TextView
        android:id="@+id/time"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/report"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@id/imageview"
        android:text="03-11 12:33" />

    <TextView
        android:id="@+id/address"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@id/imageview"
        android:layout_toRightOf="@+id/image"
        android:text="江西" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/list_back_line" />

</RelativeLayout>