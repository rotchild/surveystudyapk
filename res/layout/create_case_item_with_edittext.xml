<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:duplicateParentState="true" 
	android:paddingLeft="10dip"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	
	<TextView android:text="title" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/create_case_item_edit_title"
		android:gravity="center_vertical"
		android:layout_centerVertical="true"
		style="@style/content_page_large_text" />
		
	<EditText
        android:id="@+id/create_case_item_edit_edit"
         android:layout_width="fill_parent"
         android:layout_toRightOf="@+id/create_case_item_edit_title"
         android:layout_centerVertical="true"
         android:gravity="left|center_vertical"
         android:layout_height="wrap_content" 
         style="@style/createcase_edittext_style"/>
		
</RelativeLayout>