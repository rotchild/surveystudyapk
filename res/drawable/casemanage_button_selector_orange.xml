<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true">
        
    <item android:state_enabled="true" android:state_pressed="true">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#aa3800" 
	             android:endColor="#aa3800"
	             /> 
	         <corners android:radius="8dip" />
         </shape>                
    </item>
    
    <item android:state_enabled="false"  android:state_pressed="false">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#ff6a10" 
	             android:endColor="#f57427"
	             /> 
	         <corners android:radius="8dip" />
         </shape>                
    </item>
    
    <item >
        <shape>
            <gradient 
	             android:angle="270" 
	             android:startColor="#ff6a10"
	             android:endColor="#f57427"/>
            <corners android:radius="8dip" />          
        </shape>        
    </item>
        
    
        
</selector>