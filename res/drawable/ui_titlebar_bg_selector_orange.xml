<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true">
        
    <item android:state_enabled="true" android:state_pressed="true">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#aa3800" 
	             android:endColor="#aa3800"
	             /> 
	         <corners android:radius="3dip" />
	         <stroke android:color="#e05907" android:width="1dip"/> 
         </shape>                
    </item>
    
    <item android:state_enabled="false"  android:state_pressed="false">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#ff6000" 
	             android:endColor="#ff7d2f"
	             /> 
	         <corners android:radius="3dip" />
         </shape>                
    </item>
    
    <item >
        <shape>
            <gradient 
	             android:angle="270" 
	             android:startColor="#ff6000"
	             android:endColor="#ff7d2f"
	             />
            <corners android:radius="3dip"/>   
            <stroke android:color="#e05907" android:width="1dip"/>       
        </shape>        
    </item>
        
    
        
</selector>