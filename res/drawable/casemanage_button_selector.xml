<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true">
        
    <item android:state_enabled="true" android:state_pressed="true">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#252e32" 
	             android:endColor="#000000"
	             /> 
	         <corners android:radius="8dip" />
         </shape>                
    </item>
    
    <item android:state_enabled="false"  android:state_pressed="false">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#a6a6a6" 
	             android:endColor="#a6a6a6"
	             /> 
	         <corners android:radius="8dip" />
         </shape>                
    </item>
    
    <item >
        <shape>
            <gradient 
	             android:angle="270" 
	             android:startColor="#3d4c52"
	             android:endColor="#121718"/>
            <corners android:radius="8dip" />          
        </shape>        
    </item>
        
    
        
</selector>