	        <gradient 
	             android:angle="270" 
	             android:startColor="#7f7f7f" 
	             android:endColor="#7f7f7f"
	             /> 
         </shape>                
    </item>
    
    <item android:state_enabled="false"  android:state_pressed="false">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#cbcbcb" 
	             android:endColor="#cbcbcb"
	             /> 
         </shape>                
    </item>
    
    <item >
        <shape>
            <gradient 
	             android:angle="270" 
	             android:startColor="#f6f6f6"
	             android:endColor="#cbcbcb"/>
        </shape>        
    </item>
        
    
        
