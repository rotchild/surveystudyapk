<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true">
        
    <item android:state_enabled="true" android:state_pressed="true">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#ffb049" 
	             android:endColor="#ffb049"/> 
	        
         </shape>                
    </item>
    
    <item android:state_enabled="false"  android:state_pressed="false">
        <shape >
	        <gradient 
	             android:angle="270" 
	             android:startColor="#E9EFFC" 
	             android:endColor="#4E4D58"/> 
         </shape>                
    </item>
    
    <item >
        <shape>
            <gradient android:angle="270"  android:startColor="#ffffff" android:endColor="#ffffff"/>
        </shape>        
    </item>
        
    
        
</selector>